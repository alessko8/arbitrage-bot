# Create or update .gitignore file
cat > .gitignore << 'EOF'
# Environment variables
.env
.env.local
.env.*

# Dependencies
node_modules/
package-lock.json

# Hardhat files
cache/
artifacts/
typechain-types/

# Test coverage
coverage/
coverage.json

# Debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# IDEs and editors
.idea/
.vscode/
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db

# Production builds
dist/
build/

# Hardhat plugins
.openzeppelin/

# Misc
.qodo/
EOF